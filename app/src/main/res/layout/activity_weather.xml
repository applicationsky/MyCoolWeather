<?xml version="1.0" encoding="utf-8"?>

    <!--android:background="@drawable/background"-->

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0c445b"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#00000000"
                >
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/title_text_weather"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:textColor="#fff"-->
                    <!--android:textSize="30sp"-->
                    <!--/>-->
                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_home"
                    />
            </RelativeLayout>

<!--======================================================天气内容区域============================================================-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c445b"
        android:gravity=""
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            >
            <ImageView
                android:tint="#FFF"
                android:src="@drawable/a044"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0c445b"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/weather_info_time"
                android:paddingTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#fff"
                android:textSize="25sp"
                android:text="THURSDAY 03:00 AM"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0c445b"
                android:gravity="start"
                >
                <TextView
                    android:id="@+id/degree_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:typeface="serif"
                    android:textColor="#fff"
                    android:textSize="90sp"
                    android:text="00"
                    />
                <TextView
                    android:id="@+id/degree_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="°"
                    />
                <TextView
                    android:id="@+id/degree_measure2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textColor="#fff"
                    android:textSize="40sp"
                    android:text="C"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/weather_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#fff"
                android:textSize="25sp"
                android:text="多云"
                />
            <TextView
                android:id="@+id/weather_info_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_gravity="start"
                android:textColor="#fff"
                android:textSize="25sp"
                android:text="佳木斯"
                />
        </LinearLayout>


    </LinearLayout>







